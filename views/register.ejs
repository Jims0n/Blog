<%- include("partials/header.ejs"); -%>



  <h1 class="h3 mb-3 fw-normal text-center fw-bold p-3 ">Signup!</h1>
  <div class="container mt-2 p-5 bg-warning">
    <form action="/register" method="POST">


      <div class="mt-3">
        <input type="text" name="username" class="form-control top" placeholder="Username" required autofocus>
      </div>
      <div class="mt-3">
        <input type="email" name="email" class="form-control top" placeholder="Email" required autofocus>
      </div>
      <div class="mt-3">
        <input type="password" name="password" class="form-control middle" placeholder="Password" required>
      </div>
      <div class="text-center">
        <button class=" btn btn-lg btn-primary mt-3 " type="submit">Sign up</button>
      </div>


    </form>
    
  </div>
  <div>
    <a class="btn btn-danger btn-lg mt-2 mx-1" role="button" href="/auth/google">
      <i class="fa-brands fa-google"></i> Sign in with Google
    </a>
    
  </div>

  <%- include("partials/footer.ejs"); -%>